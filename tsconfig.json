{
  "compilerOptions": {
    "jsx": "react-native",
    "target": "esnext",
    "lib": ["esnext"],
    "strict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "paths": {
      "common/*": ["./src/common/*"],
      "components/*": ["./src/components/*"],
      "containers/*": ["./src/containers/*"],
      "contexts/*": ["./src/contexts/*"],
      "lib/*": ["./src/lib/*"],
      "interfaces/*": ["./src/common/interfaces/*"],
      "screens/*": ["./src/screens/*"],
      "tabs/*": ["./src/tabs/*"]
    },
    "exclude": [
      "node_modules",
      "babel.config.js",
      "metro.config.js",
      "jest.config.js"
    ]
  }
}
